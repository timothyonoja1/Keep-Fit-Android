<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/all_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/all"
                    />

                <Button
                    android:id="@+id/keep_fit_matches_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="@string/keep_fit_matches"
                    android:textColor="#C1C1C1"
                    android:backgroundTint="@color/white"
                    android:layout_marginEnd="5dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/most_popular"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/search_and_match"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:text="@string/search_amp_n_match"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/search_match"
                        android:height="80dp"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:text="@string/nutritional_n_plans"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/nutritional_plans"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:text="@string/fitness_n_buddies"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/fitness_buddies"
                        android:height="80dp"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:text="@string/physio_active"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/physio_active"
                        android:layout_margin="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:text="@string/fitness_n_programmes"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_margin="5dp"
                        android:background="@drawable/fitness_programmes"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:height="80dp"
                        android:text="@string/live_n_fitness"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/live_fitness"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:height="80dp"
                        android:text="@string/groups"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/groups"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="5dp"
                        android:text="@string/training_n_spots"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/trainin_spots"/>

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="@string/train_with_a_champion"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/train_with_a_champion"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:text="@string/challenges"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/challenges"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:text="@string/my_videos"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/my_videos"
                        android:layout_margin="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:text="@string/my_photos"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/my_photos"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:text="@string/products"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/products"
                        android:layout_margin="5dp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/access_now_button"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="@string/access_now"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/access_now"
                android:layout_margin="5dp"/>

        </LinearLayout>


        <Button
            android:id="@+id/signup_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/sign_up"
            android:layout_weight="0"/>

    </LinearLayout>

</ScrollView>